{
  "name": "Symbiote",
  "description": "A proactive GitHub automation agent that responds to configured events and commands.",
  "ubiquity:listeners": ["issue_comment.created", "issues.opened", "pull_request.opened"],
  "commands": {
    "symbiote": {
      "ubiquity:example": "/symbiote",
      "description": "Manage your Symbiote.",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "description": "The actions to perform.",
            "type": "array",
            "items": {
              "description": "The action to perform.",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "executionBranch": {
        "minLength": 1,
        "description": "The branch to use for the Symbiote workflow.",
        "default": "development",
        "type": "string"
      },
      "pollIntervalSeconds": {
        "description": "Interval in seconds between polling for user events.",
        "default": 60,
        "minimum": 10,
        "maximum": 3600,
        "type": "number"
      },
      "maxRuntimeHours": {
        "description": "Maximum runtime in hours before automatic restart (We always keep a safety buffer of 1 hour; so 6 = 5 hours max runtime).",
        "default": 6,
        "minimum": 2,
        "maximum": 6,
        "type": "number"
      },
      "runtimeCheckIntervalMinutes": {
        "description": "This is the interval at which the server will check if it should restart.",
        "default": 60,
        "minimum": 1,
        "maximum": 360,
        "type": "number"
      },
      "aiConfig": {
        "default": {
          "kind": "OpenAi",
          "model": "x-ai/grok-4.1-fast",
          "baseUrl": "https://openrouter.ai/api/v1"
        },
        "type": "object",
        "properties": {
          "kind": {
            "anyOf": [
              {
                "description": "Use OpenAI's public API.",
                "const": "OpenAi",
                "type": "string"
              },
              {
                "description": "Use OpenRouter as a proxy/provider.",
                "const": "OpenRouter",
                "type": "string"
              }
            ]
          },
          "model": {
            "description": "Chat/completions model identifier.",
            "default": "x-ai/grok-4.1-fast",
            "examples": ["gpt-4o-mini", "o1-mini", "openai/gpt-4o-mini"],
            "type": "string"
          },
          "baseUrl": {
            "description": "Base URL for the LLM endpoint.",
            "default": "https://openrouter.ai/api/v1",
            "type": "string"
          }
        },
        "required": ["kind"]
      }
    }
  },
  "homepage_url": "https://keyrxng-symbiote.deno.dev"
}
