{
  "name": "Symbiote",
  "description": "A proactive GitHub automation agent that responds to configured events and commands.",
  "ubiquity:listeners": ["issue_comment.created", "issues.opened", "pull_request.opened"],
  "commands": {
    "symbiote": {
      "ubiquity:example": "/symbiote",
      "description": "Manage your Symbiote.",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "description": "The actions to perform.",
            "type": "array",
            "items": {
              "description": "The action to perform.",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "executionBranch": {
        "minLength": 1,
        "description": "The branch to use for the Symbiote workflow.",
        "default": "development",
        "type": "string"
      },
      "pollIntervalSeconds": {
        "description": "Interval in seconds between polling for user events.",
        "default": 60,
        "minimum": 10,
        "maximum": 3600,
        "type": "number"
      },
      "eventsPerPage": {
        "description": "Number of events to fetch per API request (max 100).",
        "default": 30,
        "minimum": 1,
        "maximum": 100,
        "type": "number"
      },
      "maxRuntimeHours": {
        "description": "Maximum runtime in hours before automatic restart (We always keep a safety buffer of 1 hour; so 6 = 5 hours max runtime).",
        "default": 6,
        "minimum": 2,
        "maximum": 6,
        "type": "number"
      },
      "runtimeCheckIntervalMinutes": {
        "description": "This is the interval at which the server will check if it should restart.",
        "default": 60,
        "minimum": 1,
        "maximum": 360,
        "type": "number"
      },
      "aiConfig": {
        "type": "object",
        "description": "LLM provider configuration used for autonomous reasoning.",
        "default": {
          "kind": "OpenAi",
          "model": "gpt-4o-mini",
          "baseUrl": "https://api.openai.com/v1"
        },
        "properties": {
          "kind": {
            "type": "string",
            "enum": ["OpenAi", "OpenRouter"],
            "description": "Which provider to call."
          },
          "model": {
            "type": "string",
            "description": "Chat/completions model identifier.",
            "default": "gpt-4o-mini"
          },
          "baseUrl": {
            "type": "string",
            "description": "Base URL for the model endpoint.",
            "default": "https://api.openai.com/v1"
          }
        }
      }
    }
  },
  "homepage_url": "https://keyrxng-symbiote.deno.dev"
}
