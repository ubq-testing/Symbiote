{
  "name": "Symbiote",
  "description": "A proactive GitHub automation agent that responds to configured events and commands.",
  "ubiquity:listeners": ["issue_comment.created", "issues.opened", "pull_request.opened"],
  "commands": {
    "symbiote": {
      "ubiquity:example": "/symbiote",
      "description": "Manage your Symbiote.",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "description": "The actions to perform.",
            "type": "array",
            "items": {
              "description": "The action to perform.",
              "type": "string"
            }
          }
        }
      }
    }
  },
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "executionBranch": {
        "minLength": 1,
        "description": "The branch to use for the Symbiote workflow.",
        "default": "development",
        "type": "string"
      },
      "pollIntervalSeconds": {
        "description": "Interval in seconds between polling for user events.",
        "default": 60,
        "minimum": 10,
        "maximum": 3600,
        "type": "number"
      },
      "maxRuntimeHours": {
        "description": "Maximum runtime in hours before automatic restart (We always keep a safety buffer of 1 hour; so 6 = 5 hours max runtime).",
        "default": 6,
        "minimum": 2,
        "maximum": 6,
        "type": "number"
      },
      "runtimeCheckIntervalMinutes": {
        "description": "This is the interval at which the server will check if it should restart.",
        "default": 60,
        "minimum": 1,
        "maximum": 360,
        "type": "number"
      },
      "orgsToWorkIn": {
        "type": "array",
        "items": {
          "examples": ["ubiquity-os", "ubq-testing"],
          "description": "Those listed here instantly approve the bot to work within that organization without additional investigation.\n      Any not listed here that appear in the host's events/notifications will be investigated by the symbiont to determine \n      if it can work in that organization and repository with the permissions available to it.",
          "type": "string"
        }
      },
      "aiConfig": {
        "default": {
          "kind": "OpenRouter",
          "baseUrl": "https://openrouter.ai/api/v1",
          "excludedModels": []
        },
        "type": "object",
        "properties": {
          "kind": {
            "anyOf": [
              {
                "description": "Use OpenAI's public API.",
                "const": "OpenAi",
                "type": "string"
              },
              {
                "description": "Use OpenRouter as a proxy/provider.",
                "const": "OpenRouter",
                "type": "string"
              }
            ]
          },
          "model": {
            "anyOf": [
              {
                "description": "Chat/completions model identifier.",
                "examples": ["gpt-4o-mini", "o1-mini", "openai/gpt-4o-mini"],
                "type": "string"
              },
              {
                "type": "undefined"
              }
            ]
          },
          "baseUrl": {
            "description": "Base URL for the LLM endpoint.",
            "default": "https://openrouter.ai/api/v1",
            "type": "string"
          },
          "excludedModels": {
            "type": "array",
            "items": {
              "description": "List of model IDs to exclude from selection.",
              "default": [],
              "type": "string"
            }
          }
        },
        "required": ["kind", "model", "excludedModels"]
      }
    },
    "required": ["orgsToWorkIn"]
  },
  "homepage_url": "https://keyrxng-symbiote.deno.dev",
  "short_name": "ubq-testing/Symbiote@bun-for-actions"
}
